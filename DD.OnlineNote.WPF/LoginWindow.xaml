    <Grid>
        <Popup x:Name="popupNotFoundUser" StaysOpen="False" Placement="MousePoint" MaxWidth="300"
         AllowsTransparency="True"  >
            <TextBlock TextWrapping="Wrap" Width="150" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightCoral" Opacity="0.9" FontSize="16">
            Пользователь не найден!
            </TextBlock>
        </Popup>
        <Popup x:Name="popupFillLogin" StaysOpen="False" Placement="MousePoint" MaxWidth="300"
         AllowsTransparency="True"  >
            <TextBlock TextWrapping="Wrap" Width="121" Height="69" HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightCoral" Opacity="0.9" FontSize="16">
            Необходимо заполнить имя пользователя!
            </TextBlock>
        </Popup>
        <Popup x:Name="popupWelcom" StaysOpen="False" Placement="MousePoint" MaxWidth="300"
         AllowsTransparency="True"  >
